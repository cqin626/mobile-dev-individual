<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDE7"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/compose_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:padding="16dp"
        android:text="@string/compose_instruction"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/compose_target_num_card"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#ADD8E6"
        android:gravity="center" />

    <LinearLayout
        android:id="@+id/compose_slots_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="#808080" />

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:background="#808080" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/compose_cards_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8F6251"
        android:minHeight="60dp"
        android:orientation="horizontal">

        <!-- Number cards go here -->
        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#ADD8E6"
            android:gravity="center" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#ADD8E6"
            android:gravity="center" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#ADD8E6"
            android:gravity="center" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#ADD8E6"
            android:gravity="center" />

    </LinearLayout>

    <Button
        android:id="@+id/compose_submit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/common_submit" />

</LinearLayout>